<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#005f7f"
    tools:context=".manage_account">


    <TextView
        android:margin_top="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="23sp"
        android:drawableStart="@drawable/stw"
        android:drawableLeft="@drawable/stw"
        android:drawablePadding="5dp"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_accounts" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/textView4"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"


        >

        <Button
            android:id="@+id/button8"
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:layout_gravity="right"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="15dp"
            android:textAllCaps="false"
            android:drawableStart="@drawable/edit"
            android:drawableLeft="@drawable/edit"
            android:padding="2dp"
            android:background="none"
            android:textColor="#fff"
            android:layout_marginTop="270dp"

            />

        <Button
            android:id="@+id/button10"
            android:layout_width="30dp"
            android:layout_height="37dp"
            android:layout_gravity="right"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="none"
            android:drawableStart="@drawable/del"
            android:drawableLeft="@drawable/del"
            android:padding="2dp"
            android:textAllCaps="false"
            android:textColor="#fff"

            />


    </androidx.cardview.widget.CardView>
</RelativeLayout>